<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pwmmobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".TextActivity" />
        <activity android:name=".CoverActivity" />
        <activity
            android:name=".GossipActivity"
            android:label="@string/title_activity_gossip"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".CharacterActivity"
            android:label="@string/title_activity_character"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GuestPageActivity"
            android:label="@string/title_activity_guest_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ClueListActivity" />
        <activity android:name=".GuestListActivity" />
        <activity android:name=".BookActivity" />
        <activity android:name=".ClueFoundActivity" />
        <activity android:name=".HostPageActivity" />
        <activity android:name=".PartyListActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>